{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
    <div class="media">
       
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.synopsis }}</p>
            <p>Catégorie : {{ program.category.name }}</p>

            {% for season in program.seasons %}
            <p>Saison {{ season.number }}</p>
            <p>Année {{ season.year }}</p>
            <p>Description {{ season.description }}</p>
           <a href="{{ path('program_season_show', { slug: program.slug, "season": season.id }) }}">Lien vers la saison</a>
            {% endfor %}

        <h2> Liste des acteurs de la série </h2>
           {% for actor in program.actors %}
                <ul>
        <li><a href="{{ path('actor_show', { 'id': actor.id }) }}">{{ actor.firstname }} {{ actor.lastname }}</a></li>

            {% else %}
                <p>Aucun acteur trouvé pour cette série.</p>
            {% endfor %}
        </div>
    </div>


    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
{% endblock %}