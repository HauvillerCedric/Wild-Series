{% extends 'base.html.twig' %}

{% block title %}Episode{% endblock %}

{% block body %}
    <h1>Episode</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ episode.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ episode.number }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ episode.synopsis }}</td>
            </tr>
        </tbody>
    </table>
    
    {% if is_granted('ROLE_USER') %}
        <!-- Affiche le lien vers le formulaire d'ajout de commentaire -->
        <a href="{{ path('comment_new', {'episodeId': episode.id}) }}">Ajouter un commentaire</a>

    {% endif %}
    
    <a href="{{ path('app_episode_index') }}">back to list</a>
    <a href="{{ path('app_episode_edit', {slug: episode.slug}) }}">edit</a>
    {{ include('episode/_delete_form.html.twig') }}
{% endblock %}
