{% extends 'base.html.twig' %}

{% block title %}Comment index{% endblock %}

{% block body %}
    <h1>Comment index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Comment</th>
                <th>Rate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for comment in comments %}
                <tr>
                    <td>{{ comment.id }}</td>
                    <td>{{ comment.comment }}</td>
                    <td>{{ comment.rate }}</td>
                    <td>
                        <a href="{{ path('comment_show', {'id': comment.episode.id}) }}">show</a>
                         
                         {% if is_granted('ROLE_ADMIN') or  comment.author == app.user %}
                            {{ include('comment/_delete_form.html.twig', {'id': comment.episode.id}) }}
                        {% endif %}
                        
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
